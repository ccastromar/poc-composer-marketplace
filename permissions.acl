  resource: "com.marketplace.AceptarEnvio"
  action: ALLOW
}
rule CompradorActualizaEnvio {
description: "Comprador actualiza envio"
  participant: "com.marketplace.Comprador"
  operation: ALL
  resource: "com.marketplace.Envio"
